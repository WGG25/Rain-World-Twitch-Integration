<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net48</TargetFramework>
		<LangVersion>11</LangVersion>
		<AssemblyVersion>3.0.1.0</AssemblyVersion>
		<FileVersion>3.0.1.0</FileVersion>
	</PropertyGroup>
	
	<ItemGroup>
		<Reference Include="../lib/*.dll">
			<Private>false</Private>
		</Reference>
	</ItemGroup>
	
	<ItemGroup>
	  <PackageReference Include="Microsoft.Extensions.Logging" Version="10.0.2" />
	  <PackageReference Include="TwitchLib" Version="3.5.3" />
	  <PackageReference Include="TwitchLib.EventSub.Websockets" Version="0.8.0" />
	</ItemGroup>

	<Target Name="CopyPlugins" AfterTargets="PostBuildEvent">
		<ItemGroup>
			<ModPlugin Include="$(TargetDir)/*.dll" />
			<ModPlugin Include="$(TargetDir)/$(TargetName).pdb" />
		</ItemGroup>
		
		<Copy SourceFiles="@(ModPlugin)" DestinationFolder="../mod/newest/plugins" />
	</Target>

</Project>
